<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import ui.Point?>


<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<HBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.DiffController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox spacing="10.0">
        <Label text="Оригинальная функция"/>
        <HBox spacing="7.0">
            <VBox spacing="5.0">
                <Button onAction="#onCreateManualFuncButtonClick">
                    <tooltip><Tooltip text="Задать руками" /></tooltip>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" >
                            <Image url="@./img/manual.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button onAction="#onCreateMathFuncButtonClick">
                    <tooltip><Tooltip text="Задать мат функцию" /></tooltip>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" >
                            <Image url="@./img/formula.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button>
                    <tooltip><Tooltip text="Загрузить" /></tooltip>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" >
                            <Image url="@./img/download.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button>
                    <tooltip><Tooltip text="Сохранить" /></tooltip>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" >
                            <Image url="@./img/save.png" />
                        </ImageView>
                    </graphic>
                </Button>

            </VBox>
            <TableView prefWidth="110.0" >
                <columns>
                    <TableColumn prefWidth="50.0" text="X" fx:id="XColumn">
                        <cellValueFactory>
                            <PropertyValueFactory property="x" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="50.0" text="Y" fx:id="YColumn">
                        <cellValueFactory>
                            <PropertyValueFactory property="y" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <Point x="1.34" y="1.78"/>
                        <Point x="2" y="2"/>
                        <Point x="3" y="3"/>
                    </FXCollections>
                </items>
            </TableView>
        </HBox>
    </VBox>

    <VBox spacing="10.0">
        <Label text="Дифференцируемая функция"/>
        <HBox spacing="7.0">
            <VBox spacing="5.0">
                <Button text="Посчитать"></Button>
                <Button>
                    <tooltip><Tooltip text="Сохранить" /></tooltip>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" >
                            <Image url="@./img/save.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
            <TableView prefWidth="110.0" >
                <columns>
                    <TableColumn prefWidth="50.0" text="X" fx:id="XfColumn">
                        <cellValueFactory>
                            <PropertyValueFactory property="x" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="50.0" text="Y" fx:id="YfColumn">
                        <cellValueFactory>
                            <PropertyValueFactory property="y" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <Point x="1.34" y="1.78"/>
                        <Point x="2" y="2"/>
                        <Point x="3" y="3"/>
                    </FXCollections>
                </items>
            </TableView>
        </HBox>
    </VBox>
</HBox>
